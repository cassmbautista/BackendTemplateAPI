  ],
  "paths": {
    "/people": {
      "post": {
        "tags": [
          "People"
        ],
        "description": "Create new person in system",
        "parameters": [
          {
            "name": "people",
            "in": "body",
            "description": "People that we want to create",
            "schema": {
              "$ref": "#/definitions/People"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "New people is created",
            "schema": {
              "$ref": "#/definitions/People"
            }
          }
        }
      },
      "get": {
        "tags": [
          "People"
        ],
        "summary": "Get all people in system",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/People"
            }
          }
        }
      }
    },
    "/people/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "ID of people that we want to find",
          "type": "string"
        }
      ],
      "get": {
        "tags": [
          "People"
        ],
        "summary": "Get people with given ID",
        "responses": {
          "200": {
            "description": "People is found",
            "schema": {
              "$ref": "#/definitions/People"
            }
          }
        }
      },
      "delete": {
        "summary": "Delete people with given ID",
        "tags": [
          "People"
        ],
        "responses": {
          "200": {
            "description": "People is deleted",
            "schema": {
              "$ref": "#/definitions/People"
            }
          }
        }
      },
      "put": {
        "summary": "Update people with give ID",
        "tags": [
          "People"
        ],
        "parameters": [
          {
            "name": "people",
            "in": "body",
            "description": "People with new values of properties",
            "schema": {
              "$ref": "#/definitions/People"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "People is updated",
            "schema": {
              "$ref": "#/definitions/People"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "People": {
      "required": [
        "name",
        "email",
        "_id"
      ],
      "properties": {
        "_id": {
          "type": "string",
          "uniqueItems": true
        },
        "name": {
          "type": "string",
          "uniqueItems": true
        },
        "email": {
          "type": "string",
          "uniqueItems": true
        },
        "gender": {
          "type": "string"
        },
        "phone": {
          "type": "string"
        },
        "groups": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
