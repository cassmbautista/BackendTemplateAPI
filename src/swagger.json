  "host": "localhost:8080",
  "basePath": "/",
  "tags": [
    {
      "name": "People",
      "description": "API for people in the system"
    }
  ],
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
